{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "esnext"
        ],
        "declaration": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "removeComments": false,
        "inlineSourceMap": false,
        "sourceMap": true,
        "noEmitOnError": false,
        "emitDecoratorMetadata": false,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": false,
        "noImplicitAny": false,
        "strictNullChecks": false,
        // TODO
        "pretty": true,
        "strict": false,
        // TODO
        "skipLibCheck": true,
        "rootDir": "./src",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
